PROGRAM :=	myapp
CC :=     	clang
CFLAGS := 	-g -Wall -Wextra -DDEBUG
BIN :=		progs
# FILE :=		input-file

all: $(BIN)

%: %.c
	$(CC) $(CFLAGS) $< -o $@

%: %.cpp
	$(CC) $(CFLAGS) $< -o $@

readme: README.md
	pandoc README.md -o readme.pdf

timing: $(BIN)
	time ./$(PROGRAM) $(FILE)

clean:
	rm -rf $(BIN) *.dSYM readme.pdf
